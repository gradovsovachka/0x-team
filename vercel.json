{
  "rewrites": [
    { "source": "/payment/success", "destination": "/payment/success.html" },
    { "source": "/payment/error", "destination": "/payment/error.html" },
    { "source": "/payment", "destination": "/payment/index.html" },

    { "source": "/discord", "destination": "/discord/index.html" },
    { "source": "/discord/verified", "destination": "/discord/verified.html" },

    { "source": "/support", "destination": "/support.html" },
    { "source": "/", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    }
  ]
}
